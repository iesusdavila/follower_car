<launch>
    <arg name="first_rover"  default="/"/>
    <arg name="second_rover" default="rover_1"/>

    <arg name="first_rover_x_pos" default="-3.0"/>
    <arg name="first_rover_y_pos" default=" 1.0"/>
    <arg name="first_rover_z_pos" default=" 0.0"/>
    <arg name="first_rover_yaw"   default=" 0.0"/>

    <arg name="second_rover_x_pos" default="-4.5"/>
    <arg name="second_rover_y_pos" default=" 1.0"/>
    <arg name="second_rover_z_pos" default=" 0.0"/>
    <arg name="second_rover_yaw"   default=" 0.0"/>

    <group ns = "$(arg first_rover)">
        <include file="$(find main)/launch/spawn_rover.launch">
            <arg name="name_rover" value="$(arg first_rover)" />
            <arg name="rover_x_pos" value="$(arg first_rover_x_pos)" />
            <arg name="rover_y_pos" value="$(arg first_rover_y_pos)" />
            <arg name="rover_z_pos" value="$(arg first_rover_z_pos)" />
            <arg name="rover_yaw"   value="$(arg first_rover_yaw)" />
        </include>
    </group>

    <group ns = "$(arg second_rover)">
        <include file="$(find main)/launch/spawn_rover.launch">
            <arg name="name_rover" value="$(arg second_rover)" />
            <arg name="rover_x_pos" value="$(arg second_rover_x_pos)" />
            <arg name="rover_y_pos" value="$(arg second_rover_y_pos)" />
            <arg name="rover_z_pos" value="$(arg second_rover_z_pos)" />
            <arg name="rover_yaw"   value="$(arg second_rover_yaw)" />
        </include>
    </group>

</launch>