<launch>
  <arg name="first_rover"  default="rover_0"/>
  <arg name="second_rover" default="rover_1"/>

  <arg name="first_rover_x_pos" default="-3.0"/>
  <arg name="first_rover_y_pos" default=" 1.0"/>
  <arg name="first_rover_z_pos" default=" 0.0"/>
  <arg name="first_rover_yaw"   default=" 0.0"/>

  <arg name="second_rover_x_pos" default="-4.5"/>
  <arg name="second_rover_y_pos" default=" 1.0"/>
  <arg name="second_rover_z_pos" default=" 0.0"/>
  <arg name="second_rover_yaw"   default=" 0.0"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find main)/world/turtlebot3_house.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>  

  <group ns = "$(arg first_rover)">
    <param name="robot_description" command="$(find xacro)/xacro $(find description2)/urdf/adl200_description_lidar.urdf.xacro" />

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="$(arg first_rover)" />
    </node>
    
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model $(arg first_rover) -x $(arg first_rover_x_pos) -y $(arg first_rover_y_pos) -z $(arg first_rover_z_pos) -Y $(arg first_rover_yaw) -param robot_description" />
  </group>

  <group ns = "$(arg second_rover)">
    <param name="robot_description" command="$(find xacro)/xacro $(find description2)/urdf/adl200_description_lidar.urdf.xacro" />

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="$(arg second_rover)" />
    </node>

    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model $(arg second_rover) -x $(arg second_rover_x_pos) -y $(arg second_rover_y_pos) -z $(arg second_rover_z_pos) -Y $(arg second_rover_yaw) -param robot_description" />
  </group>

</launch>