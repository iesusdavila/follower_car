<launch>
  <!-- Arguments -->
  <arg name="configuration_basename" default="rover_lds_2d.lua"/>
  <arg name="set_base_frame" default="base_footprint"/>
  <arg name="set_odom_frame" default="odom"/>
  <arg name="set_map_frame"  default="map"/>
  <arg name="name_rover" default="rover" />

  <!-- Gmapping -->
  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <param name="base_frame" value="$(arg name_rover)/$(arg set_base_frame)"/>
    <param name="odom_frame" value="$(arg name_rover)/$(arg set_odom_frame)"/>
    <param name="map_frame"  value="$(arg set_map_frame)"/>
    <param name="scan"       value="$(arg name_rover)/scan"/>
    <rosparam command="load" file="$(find rover_slam)/config/gmapping_params.yaml" />
    <remap from="scan" to="$(arg name_rover)/scan"/>
  </node>
</launch>
