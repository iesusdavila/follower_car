<?xml version="1.0" ?>
<robot name="robot_rover" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find description2)/urdf/materials.xacro"/>
  <xacro:include filename="$(find description2)/urdf/robot_rover.gazebo.xacro"/>

  <link name="base_footprint"/>

  <joint name="main_joint" type="fixed">
    <parent link = "base_footprint"/>
    <child link = "base_link"/>
    <origin xyz ="0 0 0.10" rpy="0 0 0"/>
  </joint>
    
  <link name = "base_link">
    <visual>
      <origin xyz= "0 0 0.085"/>
      <geometry>
        <mesh filename= "package://description2/meshes/Chassis.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name ="white"/>
    </visual>
    <collision>
      <origin xyz= "0 0 0.085"/>
      <geometry>
          <box size = "0.69804 0.325 0.17 "/>
      </geometry>
    </collision>
    <inertial>
      <mass value="19.928" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.286" ixy="0.0" ixz="0.0"
          iyy="1.109" iyz="0.0" 
          izz="1.227" />
    </inertial>    
  </link>

  <joint name="left_wheel_front_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_front_link"/>
    <origin xyz="0.175 0.1875 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="left_wheel_front_link">
    <visual>
      <geometry>
        <mesh filename="package://description2/meshes/wheels.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="-${pi/2} 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.420"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.004" ixy="0.0" ixz="0.0"
                iyy="0.008" iyz="0.0" 
                izz="0.004" />
    </inertial>
  </link>

  <joint name="left_wheel_back_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_back_link"/>
    <origin xyz="-0.175 0.1875 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="left_wheel_back_link">
    <visual>
      <geometry>
        <mesh filename="package://description2/meshes/wheels.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="-${pi/2} 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.420"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.004" ixy="0.0" ixz="0.0"
                iyy="0.008" iyz="0.0" 
                izz="0.004" />
    </inertial>
  </link>

  <joint name="right_wheel_front_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_front_link"/>
    <origin xyz="0.175 -0.1875 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="right_wheel_front_link">
    <visual>
      <geometry>
        <mesh filename="package://description2/meshes/wheels.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.420"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.004" ixy="0.0" ixz="0.0"
                iyy="0.008" iyz="0.0" 
                izz="0.004" />
    </inertial>
  </link>

  <joint name="right_wheel_back_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_back_link"/>
    <origin xyz="-0.175 -0.1875 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="right_wheel_back_link">
    <visual>
      <geometry>
        <mesh filename="package://description2/meshes/wheels.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.420"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.004" ixy="0.0" ixz="0.0"
                iyy="0.008" iyz="0.0" 
                izz="0.004" />
    </inertial>
  </link>

  <joint name="fixed" type="fixed">
    <parent link="base_link"/>
    <child link="sensor"/>
    <origin xyz = "0.23 0 0.17"/>
  </joint>

  <link name="sensor">
    <visual>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry>
        <box size="0.135 0.11 0.04"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <collision>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry>
        <box size="0.135 0.11 0.04"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
    </inertial>
  </link>

</robot>
